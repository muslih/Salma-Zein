<%= form_for [:admin, @position] do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, "Posisi / Jabatan",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :department_id, "Departemen",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:department_id,Department.all,:id,:name,{:prompt => "Pilih Departemen"}, class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", :class=>"btn btn-primary", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>
