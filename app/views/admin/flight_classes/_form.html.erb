<%= form_for [:admin, @flight_class] do |f| %>
  <fieldset>
    <div class="form-group">
    <%= f.label :name, "Flight Name",class:"col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :desc, "Deskripsi",class:"col-sm-2 control-label"  %>
      <div class="col-sm-10">
        <%= f.text_field :desc, class:'form-control'  %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>
