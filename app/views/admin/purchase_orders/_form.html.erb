    <div class="col-sm-10">
    <% if @pr.present? %>
      #<%= @pr.pr_number %>
      <% else %>
      #<%= @purchase_order.purchase_request.pr_number %>
    <% end %>
    <%#= f.text_field :purchase_request_id, class:'form-control' %>
    </div>
