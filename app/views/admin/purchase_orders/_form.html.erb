<%= form_for [:admin, @purchase_order] do |f| %>
<fieldset>
  <div class="form-group">
    <%= f.label :purchase_request_id,class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= @pr.id %>
    <%#= f.text_field :purchase_request_id, class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :purchase_order_address_id, "Alamat PO",class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :purchase_order_address_id, class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :po_number, "Np.PO",class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :po_number, class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :arrival_estimated, "Estimasi kedatangan barang",class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :arrival_estimated, class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :status, "Status",class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", :class=>"btn btn-primary", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>
