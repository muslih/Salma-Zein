<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Pendidikan
                <%= link_to 'Tambah Pendidikan', new_admin_education_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                  <tr>
                    <th>Nama Pendidikan</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @educations.each do |education| %>
                    <tr>
                      <td><%= education.name %></td>
                      <td><%= link_to 'Edit', edit_admin_education_path(education),class:'text-info' %></td>
                      <td><%= link_to 'Hapus', admin_education_path(education), method: :delete, class:'text-danger', data: { confirm: 'Yakin hapus data?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>