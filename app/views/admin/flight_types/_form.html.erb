<%= form_for [:admin, @flight_type] do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, "Nama", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'nama flight type' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :flight_class_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:flight_class_id,FlightClass.all,:id,:name,{:prompt => "Pilih Kelas Penerbangan"}, class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>
