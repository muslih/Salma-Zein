<div class="row">
	<div class="col-md-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h5> <%= @purchase_request.pr_number %></h5>
		</div>
		<div class="panel-body" style="overflow: scroll;">
			<% @itemid = Array.new %>
			<% @suppid = Array.new %>
			<% @purchase_request.purchase_request_details.each do |prd| %>
					<% @suppid << prd.item.supplier.id %>
					<% @itemid << prd.item.id %>
			<% end %>

			<% Supplier.where(id: @suppid).each_with_index do |supp| %>
				<div class="col-sm-6">
					<div class="panel panel-default">
						<div class="panel-heading">
							<%= supp.name %>
						</div>
						<div class="panel-body">
							<div class="content table-responsive table-full-width">
								<table class="table table-striped table-hover">
									<thead>
										<tr>
											<th>No</th>
											<th>Nama Barang</th>
											<th>Harga</th>
										</tr>
									</thead>
									<tbody>
										<% Item.where(id: @itemid, supplier_id: supp.id).each_with_index do |item, index|%>
											<tr>
												<td><%= index + 1%></td>
												<td><%= item.name %></td>
												<td><%= "#{ke_rp(item.price)}/#{item.item_unit.name}"%></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>	
				</div>
			<% end %>
		</div>
	</div>
</div>
				