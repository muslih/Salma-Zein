<fieldset>
<div class="form-group">
	<div class="col-sm-8" >
		<%= f.collection_select(:item_id, Item.all, :id, :name, {prompt: "Pilih Item Berdasarkan Supplier"}, {class: "form-control"}) %>
	</div>
	<div class="col-sm-2">
		<%= f.number_field :qty, class: 'form-control', placeholder: 'jumlah' %> 
	</div>
	<div class="col-sm-2">
		<%= f.hidden_field :_destroy %>
		<%= link_to "remove", '#', class: "btn btn-md btn-danger remove_fields" %>
	</div>
</div>
</fieldset>