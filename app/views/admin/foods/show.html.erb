<div class="row">
    <div class="col-md-12">
        <div class="card">
        <div class="header">
            <h4 class="title">
              <%= link_to 'Kembali', admin_foods_path, :class=>"btn btn-warning btn-fill pull-right" %>
            </h4>
          </div>
			<h2>Resep <%= @food.name%></h2>
			<div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>  
               <tr>                  
                <th>Bahan</th>
                <th>Jumlah</th>
               </tr>  
              </thead>  
              <tbody>  
               <% @food.food_recipes.each do |fr| %>  
                <tr> 
                 <td><%= fr.item.name %></td>
                 <td><%= fr.qty %> <%= fr.item.item_unit.name %></td>
                </tr>  
               <% end %>  
              </tbody>  
             </table>  
             </div>

              <fieldset>
              <% if !current_user_kitchen %>
                    <%= link_to 'Edit', edit_admin_food_path(@food), class:"btn btn-fill btn-primary" %>
                    <% end %>
              </fieldset>
            </div>
          </div>

        </div>
		</div>
	</div>
</div>