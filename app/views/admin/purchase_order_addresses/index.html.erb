<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Alamat Purchase Order
                <%= link_to 'Tambah Data', new_admin_purchase_order_address_path, :class=>"btn btn-warning btn-fill pull-right" %>
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                <thead>
                  <tr>
                    <th>Nama Alamat</th>
                    <th>Alamat</th>
                    <th>Pic</th>
                    <th>No.Telp</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @purchase_order_addresses.each do |purchase_order_address| %>
                    <tr>
                      <td><%= purchase_order_address.name %></td>
                      <td><%= purchase_order_address.address %></td>
                      <td><%= purchase_order_address.pic %></td>
                      <td><%= purchase_order_address.phone %></td>
                      <td><%= link_to 'Detail', admin_purchase_order_address_path(purchase_order_address) %></td>
                      <td><%= link_to 'Edit', edit_admin_purchase_order_address_path(purchase_order_address) %></td>
                      <td><%= link_to 'Hapus', admin_purchase_order_address_path(purchase_order_address), method: :delete, data: { confirm: 'Yakin hapus data?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>