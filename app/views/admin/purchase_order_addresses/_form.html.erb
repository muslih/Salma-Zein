<%= form_for [:admin, @purchase_order_address] do |f| %>
<fieldset>
  <div class="form-group">
    <%= f.label :name, "Nama Alamat", class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "Nama Alamat", class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :address, "Alamat", class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :address, placeholder: "Alamat", class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :pic, "PIC", class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pic, placeholder: "PIC", class:'form-control' %>
    </div>
  </div>
</fieldset>

<fieldset>
  <div class="form-group">
    <%= f.label :phone, "No.Telp", class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, placeholder: "No.Telp", class:'form-control' %>
    </div>
  </div>
</fieldset>

  <fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", :class=>"btn btn-primary", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>
