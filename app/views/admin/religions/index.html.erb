<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Agama
                <%= link_to 'Tambah Agama', new_admin_religion_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @religions.each do |religion| %>
                    <tr>
                      <td><%= religion.name %></td>
                      <td><%= link_to 'Edit', edit_admin_religion_path(religion),class:'text-info' %></td>
                      <td><%= link_to 'Hapus', admin_religion_path(religion), method: :delete, class:'text-danger', data: { confirm: 'Yakin hapus data?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>