<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Makanan
                <%= link_to 'Tambah Makanan', new_food_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                <thead>
                  <tr>
                    <th>Nama Makanan</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @foods.each do |food| %>
                    <tr>
                      <td><%= food.name %></td>
                      <td><%= link_to 'Detail', food %></td>
                      <td><%= link_to 'Edit', edit_food_path(food),class:'text-info' %></td>
                      <td><%= link_to 'Hapus', food, method: :delete, class:'text-danger', data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>