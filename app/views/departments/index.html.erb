<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Departemen
                <%= link_to 'Tambah Kategori', new_department_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                  <tr>
                    <th>Station</th>
                    <th>Departemen</th>
                    <th>Manager</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @departments.each do |department| %>
                    <tr>
                      <td><%= department.try(:station).try(:name) %></td>
                      <td><%= department.name %></td>
                      <td><%= department.manager %></td>
                      <td><%= link_to 'Edit', edit_department_path(department),class:'text-info' %></td>
                      <td><%= link_to 'Destroy', department, method: :delete, class:'text-danger', data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
    </div>
</div>