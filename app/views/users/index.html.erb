<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master User
                <%= link_to 'Tambah User', new_user_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Email</th>
                      <th colspan="2"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @users.each do |user| %>
                      <tr>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= link_to 'Edit', edit_user_path(user),class:'text-info' %></td>
                        <td><%= link_to 'Hapus', user, method: :delete, class:'text-danger', data: { confirm: 'Yakin hapus data?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>