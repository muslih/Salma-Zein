<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Pegawai
                <%= link_to 'Tambah Pegawai', new_employee_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
                <!-- <p class="category">Data master pegawai</p> -->
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Nama</th>
                      <th>Role</th>
                      <th>Usia</th>
                      <th>TTL</th>
                      <th>Gender</th>
                      <th>Agama</th>
                      <th>Pendidikan</th>
                      <th>Pengalaman</th>
                      <th>Skill</th>
                      <th>Posisi</th>
                      <th colspan="2"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @employees.each_with_index do |employee,index| %>
                      <tr>
                        <td><%= index + 1 %></td>
                        <td><%= employee.name %></td>
                        <td><%= employee.role %></td>
                        <td><%= employee.age %></td>
                        <td><%= employee.birth_place + "," + employee.birth_date.strftime('%d %B %Y') %></td>
                        <td><%= employee.try(:gender).try(:name) %></td>
                        <td><%= employee.try(:religion).try(:name) %></td>
                        <td><%= employee.try(:position).try(:name) %></td>
                        <td><%= employee.try(:education).try(:name) %></td>
                        <td><%= employee.experience %></td>
                        <td><%= employee.skill %></td>
                        <td><%= link_to 'Edit', edit_employee_path(employee),class:'text-info' %></td>
                        <td><%= link_to 'Hapus', employee, method: :delete, class:'text-danger',data: { confirm: 'Yakin hapus data?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>

            </div>
        </div>
    </div>
</div>



