<%= form_for(employee,class:'form-horizontal') do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, "Nama",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name,class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
  <div class="horizontal">
    <div class="form-group">
      <%= f.label :role, "Hak Akses",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="col-md-3">
          <%= f.radio_button(:role, "Kitchen")%>
          <%= f.label(:role, "Kitchen") %> <br />
          <%= f.radio_button(:role, "Quality Control") %>
          <%= f.label(:role, "Quality Control") %>
        </div>
        <div class="col-md-3">
        <%= f.radio_button(:role, "logistik") %>
        <%= f.label(:role, "logistik") %> <br />
        <%= f.radio_button(:role, "Administrasi") %>
        <%= f.label(:role, "Administrasi") %>
        </div>
        <div class="col-md-3">
        <%= f.radio_button(:role, "Operational") %>
        <%= f.label(:role, "Operational") %> <br />
        <%= f.radio_button(:role, "Administrator") %>
        <%= f.label(:role, "Administrator") %>
        </div>
      </div>
    </div>
  </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :age, "Usia",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :age,class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :birth_place, "Tempat Lahir",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :birth_place,class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :birth_date, "Tanggal Lahir",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select(:birth_date, {:order => [:day, :month, :year] ,:start_year => 1970, :end_year => 2013},{:class=>"form-control datepicker",:style=>"width:32%;display:inline-block"})%>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :gender_id, "Gender",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:gender_id,Gender.all,:id,:name,{:prompt => "Pilih gender"},class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :religion_id, "Agama",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:religion_id,Religion.all,:id,:name,{:prompt => "Pilih agama"},class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :position_id, "Posisi",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:position_id,Position.all,:id,:name,{:prompt => "Pilih posisi"},class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :education_id, "Pendidikan",class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select(:education_id,Education.all,:id,:name,{:prompt => "Pilih pendidikan"},class:'form-control') %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :experience, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :experience,class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="field">
      <%= f.label :skill, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :skill,class:'form-control' %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <div class="col-sm-2">
    </div>
      <div class="col-sm-10">
        <%= f.submit "Simpan", :class=>"btn btn-primary", class:"btn btn-fill btn-primary" %>
      </div>
  </fieldset>
<% end %>

