<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">
                Master Satuan Barang
                <%= link_to 'Tambah Barang', new_item_unit_path, :class=>"btn btn-warning btn-fill pull-right" %>
                  
                </h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                  <thead>
                    <tbody>
                      <% @item_units.each do |item_unit| %>
                        <tr>
                          <td><%= item_unit.name %></td>
                          <td><%= link_to 'Edit', edit_item_unit_path(item_unit), class:'text-info' %></td>
                          <td><%= link_to 'Hapus', item_unit, method: :delete, class:'text-danger', data: { confirm: 'Yakin hapus data?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</div>