<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Suplier</th>
      <th>Kategori</th>
      <th>Satuan</th>
      <th>Kode</th>
      <th>Lot number</th>
      <th>Nama Barang</th>
      <th>Spesifikasi</th>
      <th>Harga Satuan</th>
      <th>Deskripsi</th>
      <th>Sertifikat Halal</th>
      <th>Garansi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.try(:supplier).try(:name) %></td>
        <td><%= item.try(:item_category).try(:name) %></td>
        <td><%= item.try(:item_unit).try(:name) %></td>
        <td><%= item.code %></td>
        <td><%= item.lot_number %></td>
        <td><%= item.name %></td>
        <td><%= item.spec %></td>
        <td><%= item.price %></td>
        <td><%= item.desc %></td>
        <td><%= item.halal_certificate %></td>
        <td><%= item.warranty %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Hapus', item, method: :delete, data: { confirm: 'Yakin hapus data?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
