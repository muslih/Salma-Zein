<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :supplier_id, "Supplier" %>
    <%= f.collection_select(:supplier_id,Supplier.all,:id,:name,{:prompt => ""}, :class=>"form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :item_category_id, "Kategori barang" %>
    <%= f.collection_select(:item_category_id,ItemCategory.all,:id,:name,{:prompt => ""}, :class=>"form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :item_unit_id, "Satuan" %>
    <%= f.collection_select(:item_unit_id,ItemUnit.all,:id,:name,{:prompt => ""}, :class=>"form-control") %>
  </div>

  <div class="form-group">
    <%= f.label :code, "Kode" %>
    <%= f.text_field :code, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :lot_number, "LOT number" %>
    <%= f.number_field :lot_number, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Nama barang" %>
    <%= f.text_field :name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :spec, "Spesifikasi" %>
    <%= f.text_area :spec, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Harga" %>
    <%= f.number_field :price, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :desc, "Deskripsi" %>
    <%= f.text_area :desc, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :halal_certificate, "Sertifikat halal" %>
    <%= f.file_field :halal_certificate, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :warranty, "Garansi ?" %>
    <%= f.check_box :warranty %>
    Centang bila ada garansi
  </div>

  <div class="actions">
    <%= f.submit "Simpan", :class=>"btn btn-primary"%>
  </div>
<% end %>
